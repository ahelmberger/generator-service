{
  "name": "<%= name %>",
  "version": "<%= version %>",
  "description": "<%= description %>",
  "author": "<%= author %>",
  "license": "<%= license %>",
  "private": <%= private %>,
  "repository": {
    "type": "git",
    "url": "<%= repositoryUrl %>"
  },
  "scripts": {
    "start": "node index.js",
    <% if (testFramework === 'jasmine') { %>
    "test": "jasmine-node .",
    <% } else if (/^mocha/.test(testFramework)) { %>
    "test": "mocha *.spec.js",
    <% } %>
    "build": "docker build -t <%= name %>:<%= version %> .",
    "watch": "nodemon -e js -x \"npm test & npm start\""
  },
  "dependencies": {
    <% if (appFramework === 'express') { %>
    "cors": "~2.7.1",
    "express": "~4.13.3",
    <% } else if (appFramework === 'koa') { %>
    "koa": "~1.1.1",
    "koa-cors": "~0.0.16",
    "koa-route": "~2.4.2",
    <% } %>
    "http-graceful-shutdown": "~1.0.4"
  },
  "devDependencies": {
    <% if (testFramework === 'jasmine') { %>
    "jasmine-node": "~1.14.5",
    <% } else if (/^mocha/.test(testFramework)) { %>
    "mocha": "~2.3.3",
    <% if (testFramework === 'mocha/expect') { %>
    "expect.js": "~0.3.1",
    <% } else if (testFramework === 'mocha/should') { %>
    "should": "~7.1.1",
    <% } else if (testFramework === 'mocha/chai') { %>
    "chai": "~3.4.0",
    <% } %>
    <% } %>
    "nodemon": "~1.7.3"
  }
}
