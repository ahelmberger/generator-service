{
  "name": "<%= name %>",
  "version": "<%= version %>",
  "description": "<%= description %>",
  "author": "<%= author %>",
  "license": "<%= license %>",
  "private": <%= private %>,
  "repository": {
    "type": "git",
    "url": "<%= repositoryUrl %>"
  },
  "scripts": {
    "start": "node index.js",
    <%_ if (testFramework === 'jasmine') { _%>
    "test": "jasmine-node .",
    <%_ } else if (/^mocha/.test(testFramework)) { _%>
    "test": "mocha *.spec.js",
    <%_ } _%>
    "build": "docker build -t <%= name %>:<%= version %> .",
    "watch": "nodemon -e js -x \"npm test & npm start\""
  },
  "dependencies": {
    <%_ if (appFramework === 'express') { _%>
    "cors": "~2.7.1",
    "express": "~4.13.3",
    <%_ } else if (appFramework === 'koa') { _%>
    "koa": "~1.1.1",
    "koa-cors": "~0.0.16",
    "koa-route": "~2.4.2",
    <%_ } _%>
    "http-graceful-shutdown": "~1.0.4"
  },
  "devDependencies": {
    <%_ if (testFramework === 'jasmine') { _%>
    "jasmine-node": "~1.14.5",
    <%_ } else if (/^mocha/.test(testFramework)) { _%>
    "mocha": "~2.3.3",
    <%_ if (testFramework === 'mocha/expect') { _%>
    "expect.js": "~0.3.1",
    <%_ } else if (testFramework === 'mocha/should') { _%>
    "should": "~7.1.1",
    <%_ } else if (testFramework === 'mocha/chai') { _%>
    "chai": "~3.4.0",
    <%_ } _%>
    <%_ } _%>
    "nodemon": "~1.7.3"
  }
}
